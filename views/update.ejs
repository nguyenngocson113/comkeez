<% include ./admin/layout/master %>

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Thêm sản phẩm mới</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">

                <div class="panel-body">
                    <form role="form" action="/updateProduct" method="post" enctype="multipart/form-data">
                        <input type="hidden" name="id" value="<%=sanpham.id%>">
                        <div class="row">
                            <div class="form-group col-md-6" >
                                <label>Tên sản phẩm</label>
                                <input type="text" class="form-control" name="name" value="<%=sanpham.name%>">
                            </div>
                            <div class="form-group col-md-6">
                                <label>Loại sản phẩm</label>
                                <select class="form-control" name='type'>

                                    <%loai.forEach(function(loai){%>
                                        <option value="<%= loai.id %>"><%= loai.name%></option>
                                    <%})%>
                                </select>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-md-6">
                                <label>Đơn giá</label>
                                <input type="text" class="form-control" name="price" value="<%=sanpham.unit_price%>">
                            </div>
                            <div class="form-group col-md-6">
                                <label>Đơn giá khuyến mãi</label>
                                <input class="form-control" name="promo_price" type="text" value="<%=sanpham.promotion_price%>">
                            </div>

                        </div>
                        <div class="row">
                            <div class="form-group col-md-6">
                                <label>Đơn vị tính</label>
                                <select class="form-control" name="dvt">
                                    <option value="hộp">Hộp</option>
                                    <option value="cái">Cái</option>
                                </select>
                            </div>
                            <div class="form-group col-md-6" >
                                <label>Khuyến mãi</label>
                                <input class="form-control" name="promo" type="text" value="<%=sanpham.promotion%>">
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-md-6">

                            </div>

                            <div class="form-group col-md-6 ">
                                <label>Hình ảnh</label></br>
                                <img width="80px" height="60px" src="assets/dest/images/products/<%=sanpham.image%>" name= "image" value="<%=sanpham.image%>"/>
                                <input type="file" name="file">
                            </div>
                            <div class="form-group col-md-12">
                                <label>Mô tả</label>
                                <textarea class="form-control" rows="3" name="description" ><%=sanpham.description%></textarea>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-8"></div>
                            <div class="col-md-4">
                                <button type="submit" class="btn btn-primary">Update</button>
                                <button type="reset" class="btn btn-info">Reset</button>
                            </div>
                        </div>
                    </form>
                </div>
                    <!-- /.row (nested) -->
            </div>
                <!-- /.panel-body -->
        </div>
            <!-- /.panel -->
    </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
</div>
