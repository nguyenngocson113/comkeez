<% include ../layout/master %>

<div class="row">
	<div class="col-md-8 col-md-offset-2 col-lg-8 col-lg-offset-2">
        <h2>Shopping cart</h2>
        <div class="panel panel-default" style="margin-top: 30px;">
            <div class="panel-heading">Cart contents</div>
            <div class="panel-body">
                <div class="row cart-row">
                    <div class="cart-contents-title col-md-4">
                        <div class="hidden-xs col-md-12">
                            <div class="col-md-8 col-md-offset-2">
                                Quantity:
                            </div>
                        </div>
                    </div>
                    <div class="hidden-xs cart-contents-title col-md-2">
                        Product name:
                    </div>
                    <div class="hidden-xs cart-contents-title col-md-2">
                        Product name:
                    </div>

                    <div class="cart-contents-title text-right col-md-3">
                        <div class="col-md-12">
                            Total price:
                        </div>
                    </div>
                </div>
                    <%product.forEach(function(sp){%>
                    <div class="row cart-row">
                        <div class="col-md-4">
                            <div class="cart-item-row col-xs-2 col-md-2">
                                <a class="cart-delete-button" data-id="<%=sp.item.id%>"><i class="fa fa-trash-o" aria-hidden="true"></i></a>
                            </div>
                            <div class="col-xs-8 col-md-8">
                                <div class="input-group">
                                    <span class="input-group-btn">
                                        <button class="btn btn-sm qty-btn-minus" type="button">-</button>
                                    </span>
                                    <input type="text" class="form-control input-sm add-color text-center" id="<%=sp.item.id%>" maxlength="3" value="<%=sp.qty%>">
                                    <span class="input-group-btn">
                                        <button class="btn btn-sm qty-btn-plus" type="button">+</button>
                                    </span>
                                </div>
                            </div>
                            <div class="cart-item-row col-xs-2 col-md-2">
                                <a class="cart-update-button"data-id="<%=sp.item.id%>"><i class="fa fa-refresh" aria-hidden="true"></i></a>
                            </div>
                        </div>
                        <div class="cart-item-row text-left col-xs-8 col-md-2">
                            <a class="cart-link" href="/chitiet/<%=sp.item.id%>"><%=sp.item.name%></a>
                        </div>
                        <div class="cart-item-row text-left col-xs-8 col-md-2">
                            <img width="80px" height="60px" src="assets/dest/images/products/<%=sp.item.image%>"/>
                        </div>
                        <div class="cart-item-row text-right col-xs-4 col-md-3">
                            <div class="col-md-12">
                                <%=(sp.item.promotion_price*sp.qty)%>
                            </div>
                        </div>
                    </div>
                    <%})%>
               <div class="row">
                             <div class="col-xs-12 col-lg-12 text-right">
                                Shipping: FREE
                            </div>
                        <div  class="col-xs-12 col-lg-12 text-right">
                            Total:<%=totalPrice%>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-6 col-lg-6 text-left">
                    <button class="btn btn-danger"  id="empty-cart">Empty cart</button>
                </div>
                <div class="text-right col-xs-6 col-md-6">
                    <button id="dathang" class="btn btn-default">Checkout</button>
                  </div>
            </div>
        </div>
				<div class="col-md-8 col-md-offset-2">
			            <h3 class="text-center text-danger"></h3>
			            <div class="panel panel-default" style="margin-top: 30px;">
			                <div class="panel-heading">Customer details</div>
			                <div class="panel-body">
			                    <form class="shipping-form" action="/checkout_action" method="post" role="form" data-toggle="validator" novalidate="false">
			                        <div class="col-xs-12 col-md-8">
			                            <div class="col-xs-12 col-md-12">
			                                <div class="form-group">
			                                    <input type="email" class="form-control" id="ship_email" name="ship_email" minlength="5" placeholder="Email address" required>
			                                </div>
			                            </div>

			                            <div class="col-xs-12 col-md-12">
			                                <div class="form-group">
			                                    <input type="text" class="form-control" id="ship_name" name="ship_name" placeholder="Name" required>
			                                </div>
			                            </div>
																	<div class="col-xs-12 col-md-12">
																			<div class="form-group">
																					<input type="text" class="form-control" id="ship_phone" name="ship_phone" placeholder="Phone">
																			</div>
																	</div>
			                            <div class="col-xs-12 col-md-12">
			                                <div class="form-group">
			                                    <input type="text" class="form-control" id="ship_addr" name="ship_addr" placeholder="Address">
			                                </div>
			                            </div>


			                        </div>

			                    </form>
			                </div>
			            </div>
			    </div>
	</div>


		<input type="hidden" id="input_notify_message" value="">
		<input type="hidden" id="input_notify_message_type" value="">
		<div id="notify_message"></div>

	</body>

<%include ../layout/footer %>
	<!-- #footer -->
	<!-- .copyright -->

	<%include ../layout/script %>
