<% include ../layout/master %>

<div class="header-bottom color-div">
	<div class="container">
		<a class="visible-xs beta-menu-toggle pull-right" href="#"><span class='beta-menu-toggle-text'>Menu</span> <i class="fa fa-bars"></i></a>
		<div class="visible-xs clearfix"></div>
		<nav class="main-menu">
			<ul class="l-inline ov">
				<li><a href="./homepage">Trang chủ</a>
					<ul class="sub-menu">
					<%loai.forEach(function(loai){%>
						<li><a href="/<%= loai.route %>"><%= loai.name%></a></li>
					<%})%>
					</ul>
				</li>

			<div class="clearfix"></div>
		</nav>

	</div> <!-- .container -->
</div> <!-- .header-bottom -->


<div class="container">
	<div id="content">
		<div class="row">
			<div class="col-sm-9">
				<div class="row">
					<div class="col-sm-4">
						<img src="assets/dest/images/products/<%=sp.image%>" alt="">
					</div>
					<div>
						<div class="single-item-body">
							<p class="single-item-title"><%=sp.name%></p>
							<p class="single-item-price">
								<span><%=sp.promotion_price%></span>
							</p>
						</div>
						<div class="clearfix"></div>
						<div class="space20">&nbsp;</div>
					</div>
				</div>
				<div class="space40">&nbsp;</div>
				<div class="woocommerce-tabs">
					<div class="single-item-options">
						<a class="add-to-cart" class="add-to-cart pull-left" data-id="<%=sp.id%>" ><i class="fa fa-shopping-cart"></i></a>
					</div>
					<ul class="tabs">
						<li><a href="#tab-description">Description</a></li>
					</ul>

					<div class="panel" id="tab-description">
						<p><%=sp.description;%></p>
					</div>

					</div>
					<%if (user.facebookid) {%>
						<%comment.forEach(function(bl){%>
					<div class="row">
						<div class="col-md-1">
							<div class="avatar">
								<img class="img-responsive user-photo" src="http://graph.facebook.com/<%=bl.user.facebookid%>/picture?type=square">
							</div>
						</div>

						<div class="col-sm-11">
							<div class="panel panel-default">
								<div class="panel-heading" style="padding:10px; background-color:#f5f5f5;">
									<strong><%=bl.user.facebookname%></strong>
								</div>
								<div class="panel-body">
									<%=bl.content%>
								</div>
							</div>
						</div>

					</div>
					<%})%>

								<form class="shipping-form"  method="post" role="form" data-toggle="validator" novalidate="false">
									<div class="col-xs-12 col-md-12">
								      <div class="form-group">
								        <input type="text"  id="binhluan"  placeholder="Viết bình luận">
												<input type="hidden" id="idface" value="<%=user.id%>">
												<input type="hidden" id="idPost" value="<%=sp.id%>">
								      </div>
								  </div>
								<div class="text-right col-xs-2 col-md-6">
										<a id="comment" class="btn btn-default">Bình luận</a>
									</div>
							</form>
					<%}%>



	</div> <!-- #content -->
</div> <!-- .container -->
</div>
</div>

<%include ../layout/footer %>
	<!-- #footer -->
	<%include ../layout/copyright %>
	<!-- .copyright -->

	<%include ../layout/script %>

  <style>
  .pagination li a{
  	background-color:#FFDFE0;
  }
  .pagination > .active > span{

  }

  </style>

  </body>
  </html>
